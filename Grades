class Main {
    public static void main (String[] args) {
                      // Your code here
                      Scanner sc=new Scanner(System.in);
                      int a,b,c,d;
                      a=sc.nextInt();
                      b=sc.nextInt();
                      c=sc.nextInt();
                      d=sc.nextInt();
